<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DummyAct">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Eureka Training Center Skill Chart"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="#000000" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Eureka Training Center Skill Chart"
                android:textSize="20dp" />

            <Button
                android:id="@+id/add_student"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:text="Add Student" />

            <Button
                android:id="@+id/add_skill"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:text="Add Skill" />

            <Button
                android:id="@+id/add_sc"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:text="Add Skill Chart" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#000000" />

            <Button
                android:id="@+id/load_sc"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:text="Load Skill Chart" />

            <Button
                android:id="@+id/view_student"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal"
                android:text="View Student" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
